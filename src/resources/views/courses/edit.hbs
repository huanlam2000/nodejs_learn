<div class="mt-4">
	<h3>Chỉnh sửa khóa học</h3>

	<form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
		<div class="form-group">
			<label for="name" class="form-label">Tên khóa học</label>
			<input
				type="text"
				class="form-control"
				value="{{course.name}}"
				id="name"
				placeholder="Nhập tên khóa học"
				name="name"
			/>
		</div>
		<div class="form-group">
			<label for="description" class="form-label">Mô tả khóa học</label>
			<textarea class="form-control" id="description" placeholder="Nhập mô tả khóa học" name="description"
			>{{course.description}}</textarea>
		</div>
		<div class="form-group">
			<label for="videoId" class="form-label">Video ID</label>
			<input
				type="text"
				class="form-control"
				value="{{course.videoId}}"
				id="videoId"
				placeholder="Nhập videoId của khóa học"
				name="videoId"
			/>
		</div>
		<div class="form-group">
			<label for="level" class="form-label">Trình độ</label>
			<input
				type="text"
				class="form-control"
				value="{{course.level}}"
				id="level"
				placeholder="Nhập trình độ"
				name="level"
			/>
		</div>
		<div class="form-group">
			<button class="btn btn-primary" type="submit">Lưu lại</button>
		</div>
	</form>
</div>